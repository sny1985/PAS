<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="robots" content="noindex,nofollow" />
		<title>Error - {{ status_code }} {{ status_text }}</title>
		<link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
		{% block css %}<link href="{{ asset('bundles/acmepas/css/style.css') }}" type="text/css" rel="stylesheet" />{% endblock %}
	</head>
	<body>
		<div id="logout">
			{% if app.security.getToken().getUser() != 'anon.' %}
				Welcome {{ app.security.getToken().getUser().getUsername() }} &nbsp; 
				<a href="{{ path('logout') }}">Log Out</a>
			{% endif %}
		</div>
		<div id="content">
			{% block body %}{% endblock %}
		</div>
	</body>
</html>
