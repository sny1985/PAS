<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="robots" content="noindex,nofollow" />
		<title>Error - {{ status_code }} {{ status_text }}</title>
		<link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
		{% block css %}<link href="{{ asset('bundles/acmepas/css/style.css') }}" type="text/css" rel="stylesheet" />{% endblock %}
	</head>
	<body>
		<div id="logout">
			{% if app.security.getToken().getUser() != 'anon.' %}
				Welcome {{ app.security.getToken().getUser().getUsername() }} &nbsp; 
				<a id="home_btn" href="{{ path('pas_homepage') }}">Home</a> &nbsp; 
				<a id="logout_btn" href="{{ path('logout') }}">Log Out</a>
			{% endif %}
		</div>
		<div id="content">
			{% block body %}{% endblock %}
		</div>
		<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
		<script type="text/javascript">
			$("#logout_btn").click(function(e) {
				var res = window.confirm("Leave this form?");
				if (res == false) {
					e.preventDefault();
				}
			});
		</script>
	</body>
</html>
